<div class="bg-white p-6 rounded-lg shadow-md">
    <p class="mb-4 text-gray-700 font-medium">Are you sure you want to delete this Media Layer Collection?</p>

    <div class="flex justify-end space-x-2">
        <button @onclick="() => OnCloseModal.InvokeAsync()" class="py-2 px-4 bg-gray-300 hover:bg-gray-400 text-gray-700 rounded transition duration-200">No, Cancel</button>
        <button @onclick="() => OnConfirmDelete.InvokeAsync()" class="py-2 px-4 bg-red-500 hover:bg-red-600 text-white rounded transition duration-200">Yes, Delete</button>
    </div>
</div>


@code {
    [Parameter] public EventCallback OnConfirmDelete { get; set; }
    [Parameter] public EventCallback OnCloseModal { get; set; }
}

